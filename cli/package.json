{
  "name": "@arena/cli",
  "version": "0.1.0",
  "description": "AI-powered video editing for the terminal - professional clip generation from long-form content",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "arena": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublishOnly": "npm run test && npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "video",
    "editing",
    "ai",
    "cli",
    "clips",
    "content-creation",
    "whisper",
    "openai",
    "ffmpeg",
    "social-media",
    "youtube",
    "tiktok",
    "shorts",
    "highlights"
  ],
  "author": "Arena Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iamwhitegod/arena"
  },
  "bugs": {
    "url": "https://github.com/iamwhitegod/arena/issues"
  },
  "homepage": "https://github.com/iamwhitegod/arena#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12",
    "cli-progress": "^3.12.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/inquirer": "^9.0.7",
    "@types/cli-progress": "^3.11.5",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
